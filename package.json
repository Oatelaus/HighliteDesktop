{
  "name": "highlite",
  "productName": "HighLite",
  "version": "1.4.6",
  "description": "A RuneLite-esque Client for the game High Spell",
  "homepage": "https://github.com/Oatelaus/HighliteDesktop#readme",
  "engines": {
    "node": "^22.x.x"
  },
  "bugs": {
    "url": "https://github.com/Oatelaus/HighliteDesktop/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Oatelaus/HighliteDesktop.git"
  },
  "license": "GPL-3.0-only",
  "author": "Highlite Team",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "start": "electron-vite preview",
    "build": "electron-vite build",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,html}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,html}\" --ignore-unknown"
  },
  "build": {
    "appId": "com.highlite.desktop",
    "asar": true,
    "files": [
      "out/**/*"
    ],
    "productName": "HighLite",
    "publish": [
      {
        "provider": "github",
        "owner": "Oatelaus",
        "repo": "HighliteDesktop"
      }
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png"
    }
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "uninstallDisplayName": "HighLite",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "HighLite"
  },
  "dependencies": {
    "@babylonjs/core": "^8.11.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@iconify/iconify": "^3.1.1",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.3.9",
    "emoji-unicode": "^2.0.2",
    "idb": "^8.0.3",
    "interactjs": "^1.10.27",
    "unicode-emoji": "^2.6.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^22.0.0",
    "electron": "^37.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "prettier": "^3.6.2",
    "ts-simple-nameof": "^1.3.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-electron": "^0.29.0"
  },
  "packageManager": "yarn@4.9.2"
}
